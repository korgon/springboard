//- extended header Content
extends ./above.jade

block headerextend
  .url
    input#frameurl(name='url', autocomplete='off', spellcheck='false')
  .openurl
  .line
  .worksite
    .worksitecontainer
      a.currentsite
        span.currentsite_name= site.name
      .siteselect
        //- .sitesearch
        //-   input(autocomplete='off')
        ul.sitechoices
          each site in sites
            -var site_url = 'http://localhost:1338/sites/' + site.name + '/' + site.name + '.html';
            li
              a(href=site_url, target='frameview', onclick='sb.switchSite(\"' + site.name + '\")')= site.name
